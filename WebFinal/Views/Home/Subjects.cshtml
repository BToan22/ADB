@{
	ViewData["Title"] = "Subject Page";
	ViewData["js"] = "home.js";
}

<div id="layoutSidenav_content">

	<main>
		<div class="container-fluid px-4">
			<h1 class="mt-4">Lecturer</h1>
			<ol class="breadcrumb mb-4">
				<li class="breadcrumb-item"><a href="/Home">Home</a></li>
				<li class="breadcrumb-item active">Manage</li>
				<li class="breadcrumb-item active">Subjects</li>
			</ol>
			<div class="card mb-4">
				<div class="row">
					<div class="col-5">
						<div class="mb-5">
							<label class="form-label">Select your class:</label>
							<select id="selClass" class="form-select" onchange="selectClass(this)">

								<option value="0" selected>--- Please select Major ---</option>
								<option value="3">IT</option>
								<option value="2">KT</option>
								<option value="1">OTO</option>
							</select>
						</div>
					</div>
					<div class="col-4">
						<button data-bs-toggle="modal" data-bs-target="#modal"
								onclick="addNew()" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3 ">
							Add new Subjects
						</button>
					</div>
				</div>
				<div class="card-header">
					<i class="fas fa-table me-1"></i>
					List of Subject
					<div class="d-md-inline-block form-inline me-0 me-md-3 my-2 my-md-0 col-4">
						<div class="input-group">
							<input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
							<button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
						</div>
					</div>
				</div>
				<div class="card-body">
					<table id="datatablesSimple" class="table">
						<thead>
							<tr>
								<th>STT</th>
								<th>ID</th>
								<th>Name</th>
								<th>Credit</th>
								<th>Major</th>

							</tr>
						</thead>
						<tbody>
							<tr>
								<td>1</td>
								<td>COCC</td>
								<td>Math</td>
								<td>3</td>
								<td>IT</td>

								<td>
								</td>
							</tr>
						</tbody>
					</table>
					<nav aria-label="Page navigation example">
						<ul class="pagination">
							<li class="page-item"><a class="page-link" onclick="goPrev()" href="javascript:void(0)">Previous</a></li>
							<li class="page-item">
								<a class="page-link" href="#">
									<span id="curPage">1</span>
								</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="#">
									<span id="curPage">2</span>
								</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="#">
									<span id="curPage">3</span>
								</a>
							</li>
							<li class="page-item"><a class="page-link" onclick="goNext()" href="javascript:void(0)">Next</a></li>
						</ul>
					</nav>
					<script id="courseTemplate" type="text/x-jquery-tmpl">
						<tr>
							<td>${STT}</td>
							<td>${id}</td>
							<td>${courseName}</td>
							<td>${subCode}</td>
							<td>${credit}</td>
							<td>${note}</td>
							<td>
								<button
									class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"
									data-bs-toggle="modal" data-bs-target="#modal"
									onclick="openModal(${id})">
									Info
								</button>
								<button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"
											type="button"
											onclick="deleteCourse(${id})">
										Delete
								</button>
							</td>
						</tr>
					</script>
				</div>
			</div>
		</div>
	</main>
</div>