@{
	ViewData["Title"] = "Salary Page";
	ViewData["js"] = "home.js";

}

<div id="layoutSidenav_content">
	<main>
		<div class="container-fluid px-4">
			<h1 class="mt-4">Salary</h1>
			<ol class="breadcrumb mb-4">
				<li class="breadcrumb-item"><a href="/Home">Home</a></li>
				<li class="breadcrumb-item active">Manage</li>
				<li class="breadcrumb-item active">Salary</li>
			</ol>
		</div>
		<div class="card mb-4">
			<div class="mb-3 row">
				<div class="d-md-inline-block form-inline me-0 me-md-3 my-2 my-md-0 col-sm-4">
					<div class="input-group searchlabel2">

							<input class="form-control" type="text"  id="btnSearchSalary"/>
							<button class="btn btn-primary" type="button" ><i class="fas fa-search" onclick="searchSalary()"></i></button>
						</div>
				</div>
				<div class="col-sm-4 addnew2">
					<button data-bs-toggle="modal" data-bs-target="#modal" onclick="addNewLec()"
						class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3 ">
						Add new Salary
					</button>
				</div>
				<div class="col-sm-2 show2">
					<button onclick="showLec()" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3 ">
						Show
					</button>
				</div>
			</div>
			<div class="card-header">
				<i class="fas fa-table me-1"></i>
				List of Salary
			</div>
			<div class="card-body">
				<table id="tblSalary" class="table">
					<thead>
						<tr>
							
							<th>EmpID</th>
							<th>Total Salary</th>
							<th>Total Shift</th>
							<th>Date</th>

						</tr>
					</thead>
					<tbody>
						<tr>
							
							<td>101</td>
							<td>9000000</td>
							<td>30</td>
							<td>2023-30-10</td>
							
						</tr>
					</tbody>
				</table>
				<nav aria-label="Page navigation example">
					<ul class="pagination pagecontroller">
						<li class="page-item"><a class="page-link" onclick="goPrevInLec()"
								href="javascript:void(0)">Previous</a></li>
						<li class="page-item">
							<a class="page-link" href="#">
								<span id="curLPage">1</span>
							</a>
						</li>
						<li class="page-item"><a class="page-link" onclick="goNextInLec()"
								href="javascript:void(0)">Next</a></li>
					</ul>
				</nav>
				<script id="SalaryTemplate" type="text/x-jquery-tmpl">
					<tr>
						<td>${STT}</td>
						<td>${SalaryId}</td>
						<td>${SalaryName}</td>
						<td>${SalaryPhone}</td>
						<td>${SalaryEmail}</td>
						<td>
							<button
								class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"
								data-bs-toggle="modal" data-bs-target="#modal"
								onclick="openModalLec(${id})">
								Info
							</button>
							<button class="btn btn-danger btn-block fa-lg gradient-custom-2 mb-3"
										type="button"
										onclick="deleteLec(${id})">
									Delete
							</button>
						</td>
					</tr>
				</script>
				<div id="modal" class="modal fade" data-bs-backdrop="static" tabindex="-1">
					<div class="modal-dialog modal-lg">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title">Student Detail</h5>
								<button type="button" class="btn-close" data-bs-dismiss="modal"
									aria-label="Close"></button>
							</div>
							<div class="modal-body">

								<div class="mb-3 row">
									
									<label for="txtLecId" class="col-sm-2 col-form-label">Emp ID</label>
									<div class="col-sm-4">
										<input type="text" class="form-control" id="txtLecId">
									</div>
								</div>
								<div class="mb-3 row">
									<label for="txtLecName" class="col-sm-2 col-form-label">Total Salary</label>
									<div class="col-sm-6">
										<input type="text" class="form-control" id="txtLecName">
									</div>
								</div>
								<div class="mb-3 row">
									<label for="txtLecPhone" class="col-sm-2 col-form-label">Total Shift</label>
									<div class="col-sm-3">
										<input type="text" class="form-control" id="txtLecPhone">
									</div>
									
									
								</div>
								<div class="mb-3 row">
									
									<label for="txtLecEmail" class="col-sm-2 col-form-label">Date</label>
									<div class="col-sm-4">
										<input type="text" class="form-control" id="txtLecEmail">
									</div>
								</div>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
								<button id="btnSaveLec" type="button" class="btn btn-primary" onclick="saveLec()">Save
									changes</button>
								<button id="btnInsertLec" type="button" class="btn btn-success" data-bs-dismiss="modal"
									onclick="insertLec()">
									Add
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
</div>
